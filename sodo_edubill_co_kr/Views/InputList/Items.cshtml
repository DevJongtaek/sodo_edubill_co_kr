            </div>*@
            <div class="ui-box">
                <div class="ui-grid-b">
                    <div class="ui-block-a"><span class="ui-label">여신</span><span class="ui-label2">@mInputListItem.Yeosin.ToString("N0")</span><span class="ui-unit-label">원</span></div>
                    <div class="ui-block-b"><span class="ui-label">미수</span><span class="ui-label2">@mInputListItem.Misu.ToString("N0")</span><span class="ui-unit-label">원</span></div>
                    <div class="ui-block-c ui-right-box"><span class="font-bold field-gubun">@mInputListItem.Gubun</span></div>
                </div>
            </div>
            @*<div class="ui-toggle off">
                <div class="ui-grid-a">
