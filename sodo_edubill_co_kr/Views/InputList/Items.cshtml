@model IEnumerable<sodo_edubill_co_kr.ViewModels.InputListItemViewModel>

@{
    Layout = null;
}
<ul>
    @foreach (var mInputListItem in Model)
    {
        <li>
            <div>
                <span class="font-bold">@mInputListItem.Date</span><span class="font-bold">&nbsp; &nbsp;   @mInputListItem.Time</span><span class="ui-right">@mInputListItem.Name</span>
