                    <span class="field-accountno"><span class="font-bold">  @mInputListItem.AccountNo</span></span>
                </div>
                <div class="ui-block-b ui-right-box">
                    <span class="ui-font-large font-bold">@mInputListItem.Amt</span><span class="ui-unit-label">원</span>
                </div>
            </div>
            @*<div class="ui-right-box">
